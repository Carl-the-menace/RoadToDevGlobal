<div class="container">

<div class="row profile-header">
  <div class="col-md-4 center">
    <img src="{{ user.imageL }}">
    <h5 class="bold mrg-top-20">Bio</h5>
    <p class="inline-block bio-text">{{ user.bio }}</p>
  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-md-10">
        {% if user.isPrivateAcc %}
        <h3 class="inline-block;">{{ user.nickname }} [<span class="redTxt">private profile</span>]</h3>
        {% else %}
        <h3 class="inline-block bold">{{ user.nickname }}
          {% if user.country %}
            <img src="{{ user.countryFlag }}" style="margin-top: -4px">
          {% endif %}
        </a></h3>
        {% endif %}
        <hr>
      </div>
    </div>

<div class="row">
  <div class="col-md-10">
    <div class="row">

        <div class="col-xs-6 col-md-6">
          <ul>
            <li>Rank: <img class="rankimg" src="{{ user.rankImg }}"> </li>
            <li>Age: {{ user.age }}</li>
            <li>From: {{ user.country }} </li>
          </ul>
        </div>

        <div class="col-xs-6 col-md-6">
          <ul>
            <li>Rating: </li>
            <li>TA Games: </li>
  	        <li>Team: <a href="?/TeamProfile/Team/{{team.id}}">
            {% if user.inTeam %}
            {{ team.name }}
            {% endif %}
            </a></li>
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>

  <div class="col-md-8 stats-container">
    <div class="row">
      <div class="col-md-10">
        <h3 class="info-box-header mrg-bot-20">In-game stats</h3>

        <div class="tabbable mrg-bot-15">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab">General</a></li>
            <li><a href="#tab2" data-toggle="tab">Guns</a></li>
          </ul>
        </div>

        <div class="row">
          <div class="col-md-12 tab-content">

            <div id="tab1" class="row tab-pane active">
              <div class="col-xs-6">
                <ul>
                  <li>Kills: {{ user.kills }} </li>
                  <li>Headshot kills: {{ user.killsByHs }}</li>
                  <li>Deaths: {{ user.deaths }}</li>
                  <li>Hours played: {{ user.hoursPlayed }}</li>
                  <li>K/D Ratio: {{ user.kdRatio }}</li>
                </ul>
             </div>
           </div>

            <div id="tab2" class="row tab-pane">
              <div class="col-xs-6">
                <ul>
                  <li>AK-47: {{ user.killsAk47 }} </li>
                  <li>M4/A1: {{ user.killsM4 }}</li>
                  <li>AWP: {{ user.killsAwp }}</li>
                </ul>
                </div>
                <div class="col-xs-6">
                <ul>
                  <li>USP/P2000: {{ user.killsP2000 }} </li>
                  <li>Glock: {{ user.killsGlock }}</li>
                  <li>P250: {{ user.killsP250 }}</li>
                  <li>Fiveseven: {{ user.killsFiveseven }} </li>
                  <li>Tec9: {{ user.killsTec9 }} </li>
                  <li>Deagle: {{ user.killsDeagle }} </li>
                </ul>
              </div>
            </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  </div>
