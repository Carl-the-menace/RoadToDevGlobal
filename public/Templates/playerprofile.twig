<div class="row profileheader">
  <div class="col-md-4 center">
    <img src="{{ user.imageL }}">
    <h5>Bio</h5>
    <p style="max-width: 200px; font-size: 12px; display: inline-block;">{{ user.bio }}</p>
  </div>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-10">
          {% if user.isPrivateAcc %}
          <h3 style="display: inline-block;">{{ user.nickname }} [<span class="redTxt">private profile</span>]</h3>
          {% else %}
          <h3 style="display: inline-block;">{{ user.nickname }}
            {% if user.country %}
              <img src="{{ user.countryFlag }}">
            {% endif %}
          </a></h3>
          {% endif %}
          <hr>
      </div>
    </div>

<div class="row">
  <div class="col-md-10">
    <div class="row">

        <div class="col-xs-6 col-md-6">
          <ul>
            <li>Rank: <img class="rankimg" src="{{ user.rankImg }}"> </li>
            <li>Age: {{ user.age }}</li>
            <li>From: {{ user.country }} </li>
          </ul>
        </div>

        <div class="col-xs-6 col-md-6">
          <ul>
            <li>Rating: </li>
            <li>TA Games: </li>
  	        <li>Team: <a href="?/TeamProfile/Team/{{team.id}}">
            {% if user.inTeam %}
            {{ team.name }}
            {% endif %}
            </a></li>
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>

  <div class="col-md-8 stats-container">
    <div class="row">
      <div class="col-md-10">
        <h3 class="info-box-header" style="margin-bottom: 20px;">In-game stats</h3>

        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab">General</a></li>
            <li><a href="#tab2" data-toggle="tab">Guns</a></li>
          </ul>
        </div>

        <div class="row tab-content">

            <div id="tab1" class="col-xs-6 col-md-6 tab-pane active" >
              <ul>
                <li>Kills: {{ user.kills }} </li>
                <li>Deaths: {{ user.deaths }}</li>
                <li>Hours played: {{ user.hoursPlayed }}</li>
                <li>K/D Ratio: {{ user.kdRatio }}</li>
              </ul>
           </div>

            <div id="tab2" class="col-xs-6 col-md-6 tab-pane">
              <ul>
                <li>AK-47: {{ user.kills }} </li>
                <li>M4: {{ user.deaths }}</li>
                <li>Hours played: {{ user.hoursPlayed }}</li>
                <li>K/D Ratio: {{ user.kdRatio }} </li>
              </ul>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
